
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/loginPage.css" />
<div class="text-center">
    <img src="/Images/iconblk3d.png" class="logo" alt="logo">
    <h1 id="mainhead">Kangal Bank</h1>
    <div class="container1" id="container1">
        <div class="form-container sign-up-container">
            <form method="post">
                <h1>Employee<br /> Sign In</h1>
                <input name="mail" type="email" placeholder="Email" required/>
                <input name="pass" type="password" placeholder="Password" required/>
                <input name="role" type="hidden" value="0">
                <button type="submit">Sign In</button>
            </form>
        </div>
        <div class="form-container sign-in-container">
            <form method="post">
                <h1>Customer<br /> Sign In</h1>
                <input name="mail" type="email" placeholder="Email" required/>
                <input name="pass" type="password" placeholder="Password" required/>
                <input name="role" type="hidden" value="1">
                <button type="submit">Sign In</button>
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>Not Employee?</h1>
                    <p>Please login with your personal info and start your journey with us</p>
                    <button class="ghost" id="signIn">Sign In</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>Not Customer?</h1>
                    <p>Enter your employee details here</p>
                    <button class="ghost" id="signUp">Sign In</button>
                </div>
            </div>
        </div>
    </div>
</div>
    <script>
        const signUpButton = document.getElementById("signUp");
        const signInButton = document.getElementById("signIn");
        const container = document.getElementById("container1");

        signUpButton.addEventListener("click", () => {
            container.classList.add("right-panel-active");
        });

        signInButton.addEventListener("click", () => {
            container.classList.remove("right-panel-active");
        });

    </script>
